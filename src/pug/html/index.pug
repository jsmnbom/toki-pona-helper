extends layout

block title
    | toki pona

block content
    section.hero.is-bold.is-medium.is-primary
        .hero-body
            .container
                .columns
                    .column.has-text-centered
                        h1.title Hello!
                        h2.subtitle Welcome to this toki pona helper
                        p This tool can help you learn toki pona. It does this by using...
                    .column.has-text-centered
                        h1.title toki!
                        h2.subtitle kama pona lon toki pona sona ilo
                        p ilo ni li ken sona e toki pona tawa sina. ni li kepeken...

    section.section.is-small
        .container
            p.title.has-text-centered.is-4 Train vocabulary

            .card
                .card-content
                    .tutor-container
                        .tutor-item
                            div
                                span.tag.is-success simple
                                p.title.is-4.is-marginless official vocabulary
                                .content
                                    p Train the 125 root words used in toki pona.
                                    |
                                    | If you're new to the language this is where you should start.
                        .tutor-item
                            .div(style='float: right;')
                                a.button.is-primary(href='tutor.html?type=single') Go to tutor!

            .card
                .card-content
                    .tutor-container
                        .tutor-item
                            div
                                span.tag.is-warning harder
                                p.title.is-4.is-marginless general vocabulary
                                .content
                                    p Train general toki pona vocabulary.
                        .tutor-item
                            a.button.is-primary(href='tutor.html?type=multi') Go to tutor!

            .card
                .card-content
                    .tutor-container
                        .tutor-item
                            div
                                span.tag.is-danger hard
                                p.title.is-4.is-marginless full sentences
                                .content
                                    p Train full toki pona sentences.
                        .tutor-item
                            a.button.is-primary(href='tutor.html?type=sentence') Go to tutor!

    section.section.is-small
        .container
            p.title.has-text-centered.is-4 Train alternative writing systems/sign language

            .card
                .card-content
                    .tutor-container
                        .tutor-item
                            div
                                span.tag.is-warning harder
                                p.title.is-4.is-marginless sitelen toki pona
                                .content
                                    p Train toki pona hieroglyphs, as they appear in the official toki pona book.
                        .tutor-item
                            .div(style='float: right;')
                                a.button.is-primary(href='tutor.html?type=sitelen') Go to tutor!

            .card
                .card-content
                    .tutor-container
                        .tutor-item
                            div
                                span.tag.is-danger hard
                                p.title.is-4.is-marginless sign langauge
                                .content
                                    p Train toki pona sign langauge, as described in the official toki pona book. (Not yet implemented)
                        .tutor-item
                            .div(style='float: right;')
                                a.button.is-primary(href='tutor.html?type=sign') Go to tutor!