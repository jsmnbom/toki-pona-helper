extends layout

block title
    | toki pona tutor

block content
    section.section
        .container
            .box
                .progress-stacked
                    .progress-item.is-danger#stats-wrong
                    .progress-item.is-warning#stats-skip
                    .progress-item.is-success#stats-correct
                #content
                .field.is-grouped.is-grouped-centered.is-spaced
                    p.control
                        button.button.is-info#hint-button
                            span.icon
                                i.fas.fa-question-circle
                            span Get hint
                    p.control
                        button.button.is-warning#skip-button
                            span.icon
                                i.fas.fa-step-forward
                            span Skip question



